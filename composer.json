  "keywords": [
    "flarum",
    "flarum-extension",
    "flarum-ext",
    "hot discussions",
    "popular",
    "trends",
    "trending"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2",
    "guzzlehttp/guzzle": "^7.0",
    "ext-json": "*"
  },
  "authors": [
    {
      "name": "Liplum",
      "homepage": "https://liplum.net/",
      "email": "Li_plum@outlook.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/liplum/flarum-trends/issues",
    "source": "https://github.com/liplum/flarum-trends"
  },
  "autoload": {
    "psr-4": {
      "Liplum\\Trends\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Trends",
      "category": "feature",
      "icon": {
